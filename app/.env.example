# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=swing_trading
DB_USER=postgres
DB_PASSWORD=postgres

# Optional: Remote PostgreSQL SSL
# DB_SSLMODE=require

# Application Settings
LOG_LEVEL=INFO
DATA_TIMEZONE=UTC

# yfinance Rate Limiting
# Delay between API requests (seconds)
# Increase this value if you encounter 429 (Too Many Requests) errors
# Recommended: 1.5-3.0 for normal use, 5.0+ if rate limited
YFINANCE_DELAY_SECONDS=1.5
YFINANCE_TIMEOUT_SECONDS=30
YFINANCE_RETRY_COUNT=3

# Performance Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Optional: Remote PostgreSQL Connection
# DB_HOST=your-postgres-server.com
# DB_PORT=5432
# DB_SSLMODE=require
